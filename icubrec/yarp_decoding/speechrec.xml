<application>
    <name>Speech Recognition</name>
    <description>Speech Recognition</description>
    <version>1.0</version>
    <authors>
        <author email="bertrand.higy@iit.it">Bertrand Higy</author>
    </authors>
    <module>
        <name>decoder</name>
        <node>localhost</node>
        <parameters>-C $MODEL_DIR/config -H $MODEL_DIR/mmf -i $MODEL_DIR/recout.mlf -w $MODEL_DIR wdnet_upper -p 4.0 -s 15 $MODEL_DIR/dict_sp $MODEL_DIR/tiedlist $MODEL_DIR/speech.wav</parameters>
    </module>
    <module>
        <name>node $YARPJS_DIR/examples/examples.js</name>
        <node>localhost</node>
    </module>
    <module>
        <name>rctrld_yarphear</name>
        <node>localhost</node>
        <prefix>/yarphear</prefix>
    </module>

    <connection>
        <from>/soundStream/mic:o</from>
        <to>/yarphear/mic:i</to>
    </connection>
    <connection>
        <from>/soundStream/trigger:o</from>
        <to>/yarphear/cmd:i</to>
        <protocol>tcp+send.portmonitor+file.streamer_yarphear</protocol>
    </connection>
    <connection>
        <from>/yarphear/asr/rpc:o</from>
        <to>/decoder/rpc:i</to>
        <protocol>tcp+send.portmonitor+file.yarphear_decoder</protocol>
    </connection>
</application>
